<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhân viên"
            android:background="@drawable/custom_header_dialog"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="normal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avt_dialognhanvien"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_account"
                android:layout_gravity="center_horizontal"/>
            <EditText
                android:id="@+id/edt_taikhoan_dialognhanvien"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Tài khoản"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/edt_hoten_dialognhanvien"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Họ tên"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconDrawable="@drawable/ic_eye_off"
                app:endIconMode="custom"
                app:hintEnabled="false"
                android:layout_marginTop="10dp"
                android:id="@+id/textinput_loginadmin"
                >

                <EditText
                    android:id="@+id/edt_mk_dialognhanvien"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Mật khẩu"
                    android:background="@drawable/custom_edt"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:id="@+id/spinner_chucvu_dialognhanvien"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/custom_edt"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/edt_luong_dialognhanvien"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Lương"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/edt_tennganhang_dialognhanvien"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Tên ngân hàng"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/edt_stk_dialognhanvien"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Số tài khoản"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E24AA"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_luu_dialognhanvien"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@+id/btn_huy_dialognhanvien"
                android:background="@drawable/bg_green"
                android:paddingStart="2dp"
                android:text="Lưu"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_huy_dialognhanvien"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_green"
                android:text="Huỷ"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>