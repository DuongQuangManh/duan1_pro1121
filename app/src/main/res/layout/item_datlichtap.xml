<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name_itemdatlichtap"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Name"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/blue"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D3737373"/>
        <TextView
            android:id="@+id/tv_ngaydat_itemdatlichtap"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Ngày đặt lịch"
            android:gravity="center"
            android:textSize="12sp"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D3737373"/>
        <TextView
            android:id="@+id/tv_ngayditap_itemdatlichtap"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Ngày đi tập"
            android:gravity="center"
            android:textSize="12sp"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D3737373"/>
        <TextView
            android:id="@+id/tv_gioditap_itemdatlichtap"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Giờ đi tập"
            android:gravity="center"
            android:textSize="12sp"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D3737373"/>
        <TextView
            android:id="@+id/tv_gionghi_itemdatlichtap"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Giờ nghỉ"
            android:gravity="center"
            android:textSize="12sp"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D3737373"/>
        <TextView
            android:id="@+id/tv_pt_itemdatlichtap"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="PT"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/blue"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D3737373"/>
        <TextView
            android:id="@+id/tv_trangthai_itemdatlichtap"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Trạng thái"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed-medium"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D3737373"/>
</LinearLayout>