<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.hocvien.Create_Fragment_HocVien"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_tophocvien"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_back_thonghocvien"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/thongtinhocvien"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/img_back_thonghocvien"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avt_thongtinhocvien"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@color/green"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/edt_tk_thongtinhocvien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Email hoặc số điện thoại"
            android:paddingStart="10dp"
            android:layout_marginTop="40dp"
            android:enabled="false"/>
        <EditText
            android:id="@+id/edt_name_thongtinhocvien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Họ tên"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_lich"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="10dp"
            android:id="@+id/txtinput_ngay_thongtinhocvien"
            >

            <EditText
                android:id="@+id/edt_ngaysinh_thongtinhocvien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ngày sinh"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:id="@+id/spn_gioitinh_thongtinhocvien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_thaydoithongtinhocvien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible">
                <Button
                    android:id="@+id/btn_thaydoithongtinhocvien"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_green"
                    android:text="Thay đổi thông tin"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:enabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_thaydoihocvien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="invisible">
                <Button
                    android:id="@+id/btn_thaydoi_thongtinhocvien"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_green"
                    android:text="Thay đổi"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:enabled="false"/>
                <Button
                    android:id="@+id/btn_huy_thongtinhocvien"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_green"
                    android:text="Huỷ"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:enabled="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>