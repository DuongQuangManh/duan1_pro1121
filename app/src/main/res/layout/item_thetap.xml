<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:id="@+id/layout_update_itemloaithetap">

        <TextView
            android:id="@+id/tv_mathetap_itemthetap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã thẻ tập: 1"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_tenkhachhang_itemthetap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mathetap_itemthetap"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Họ tên: Dương Quang Mạnh"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/tv_tenloaithetap_itemthetap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tenkhachhang_itemthetap"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Loại thẻ: 1 tháng"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/tv_starttime_itemthetap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tenloaithetap_itemthetap"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Thời gian bắt đầu: 15-02-2003"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/tv_endtime_itemthetap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_starttime_itemthetap"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Thời gian kết thúc: 15-02-2003"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <TextView
            android:id="@+id/tv_trangthai_itemthetap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_endtime_itemthetap"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Trạng thái: hết hạn"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/green"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>