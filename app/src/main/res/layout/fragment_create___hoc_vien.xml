<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.hocvien.Create_Fragment_HocVien"
    android:padding="20dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edt_tk_signinhocvien"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edt"
        android:hint="Email hoặc số điệnt thoại"
        android:paddingStart="10dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/edt_name_signinhocvien"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edt"
        android:hint="Họ tên"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_lich"
        app:endIconMode="custom"
        app:hintEnabled="false"
        android:layout_marginTop="10dp"
        android:id="@+id/txtinput_ngay_signinhocvien"
        >

        <EditText
            android:id="@+id/edt_ngaysinh_signinhocvien"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Ngày sinh"
            android:background="@drawable/custom_edt"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spn_gioitinh_signhocvien"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_edt"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconDrawable="@drawable/ic_eye_off"
        app:endIconMode="custom"
        app:hintEnabled="false"
        android:layout_marginTop="10dp"
        android:id="@+id/textinput1_signinhocvien"
        >

        <EditText
            android:id="@+id/edt_mk1_signinhocvien"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="8 kí tự"
            android:inputType="textPassword"
            android:background="@drawable/custom_edt"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconDrawable="@drawable/ic_eye_off"
        app:endIconMode="custom"
        app:hintEnabled="false"
        android:layout_marginTop="10dp"
        android:id="@+id/textinput2_signinhocvien"
        >

        <EditText
            android:id="@+id/edt_mk2_signinhocvien"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="8 kí tự"
            android:inputType="textPassword"
            android:background="@drawable/custom_edt"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_signin_signinhocvien"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Tạo"
            android:textAllCaps="false"
            android:background="@drawable/bg_green"
            android:textColor="@color/white"
            android:layout_toStartOf="@+id/btn_huy_signinhocvien"
            />

        <Button
            android:id="@+id/btn_huy_signinhocvien"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_green"
            android:text="Huỷ"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
</LinearLayout>