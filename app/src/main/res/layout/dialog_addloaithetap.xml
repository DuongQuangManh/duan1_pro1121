<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại thẻ tập"
            android:background="@drawable/custom_header_dialog"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="normal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            >
            <EditText
                android:id="@+id/edt_maloaithetap_dialogloaithetap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Mã thẻ tập"
                android:paddingStart="10dp"
                android:enabled="false"/>
            <EditText
                android:id="@+id/edt_tenthetap_dialogloaithetap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Tên thẻ tập"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/edt_giathetap_dialogloaithetap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Giá thẻ tập"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/edt_hansudung_dialogloaithetap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Hạn sử dụng (tháng)"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E24AA"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="#FFFFFF"
            >

            <Button
                android:id="@+id/btn_luu_dialogloaithetap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@+id/btn_huy_dialogloaithetap"
                android:background="@drawable/bg_green"
                android:paddingStart="2dp"
                android:text="Lưu"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_huy_dialogloaithetap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_green"
                android:text="Huỷ"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>