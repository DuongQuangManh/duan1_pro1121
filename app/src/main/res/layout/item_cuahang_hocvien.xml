<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:id="@+id/layout_update_itemcuahanghocvien">
        <ImageView
            android:id="@+id/img_monhang_itemcuahanghocvien"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_name_itemcuahanghocvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Whey protein"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_gia_itemcuahanghocvien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130.000 vnđ"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="#FF0000"/>
            <TextView
                android:id="@+id/tv_soluong_itemcuahanghocvien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="số lượng: 5"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>