<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="@color/blue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout_update_itemcuahang">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <ImageView
                android:id="@+id/avt_itemcuahang"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_account"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_id_itemcuahang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id: 0862150203"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_name_itemcuahang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Tên thiêt bị: Dương Quang Mạnh"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_gia_itemcuahang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Giá: 300000"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/tv_soluong_itemcuahang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gia_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Số lượng: 100"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/tv_trongluong_itemcuahang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_soluong_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Trọng lượng: 100"
            android:textSize="18dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_hangsanxuat_itemcuahang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_trongluong_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Hãng sản xuất: Mỹ"
            android:textSize="18dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_tinhtrang_itemcuahang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hangsanxuat_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Tình trạng: tốt"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/tv_theloai_itemcuahang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tinhtrang_itemcuahang"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Thể loại: Dịch vụ"
            android:textSize="18dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>