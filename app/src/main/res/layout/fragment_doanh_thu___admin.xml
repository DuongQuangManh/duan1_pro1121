                                android:textSize="16sp"
                                android:textColor="#05C10D"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_dichvu_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng doanh thu từ dịch vụ: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tongtiendichvu_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.000.000 vnđ"
                                android:textColor="#05C10D"
                                android:layout_toEndOf="@+id/tv_dichvu_thang"
                                android:textSize="16sp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_cuahang_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng doanh thu từ cửa hàng: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tongtiencuahang_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#05C10D"
                                android:text="100.000.000 vnđ"
                                android:layout_toEndOf="@+id/tv_cuahang_thang"
                                android:textSize="16sp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_luong_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng lương nhân viên: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_luongnhanvien_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#05C10D"
                                android:text="100.000.000 vnđ"
                                android:layout_toEndOf="@+id/tv_luong_thang"
                                android:textSize="16sp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_baotrithietbi_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng số tiền bảo trì thiết bị: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tienbaotri_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#05C10D"
                                android:text="100.000.000 vnđ"
                                android:layout_toEndOf="@+id/tv_baotrithietbi_thang"
                                android:textSize="16sp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_alldoanhthu_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
