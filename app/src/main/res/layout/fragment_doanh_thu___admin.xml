<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.admin.ChucVu_Fragment_Admin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê số lượng"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khách hàng"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="20sp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/user"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_soluongkhachhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:text="2.000"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhân viên"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="20sp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/staff"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_soluongnhanvien"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:text="2.000"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thẻ tập"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="20sp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/card"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_soluongthetap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:text="2.000"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đơn hàng"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="20sp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/donhang"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_soluongdonhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:text="2.000"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thiết bị"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="20sp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/thietbi"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_soluongthietbi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:text="2.000"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personal trainer"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="20sp"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/imgpt"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"/>
                            <TextView
                                android:id="@+id/tv_soluongpt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:text="2.000"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="25sp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê doanh thu"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart_doanhthu"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginTop="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_thetap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng doanh thu từ thẻ tập: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tongtienthetap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.000.000 vnđ"
                                android:layout_toEndOf="@+id/tv_thetap"
                                android:textSize="16sp"
                                android:textColor="#05C10D"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_dichvu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng doanh thu từ dịch vụ: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tongtiendichvu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.000.000 vnđ"
                                android:textColor="#05C10D"
                                android:layout_toEndOf="@+id/tv_dichvu"
                                android:textSize="16sp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_cuahang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng doanh thu từ cửa hàng: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tongtiencuahang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#05C10D"
                                android:text="100.000.000 vnđ"
                                android:layout_toEndOf="@+id/tv_cuahang"
                                android:textSize="16sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê doanh thu theo từng tháng"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:padding="10dp"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:id="@+id/img_giam_doanhthu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_back"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7.4"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <EditText
                                    android:id="@+id/edt_year_doanhthu"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:text="2022"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/img_tang_doanhthu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_next1" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barchar_doanhthu"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginTop="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_thetap_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng doanh thu từ thẻ tập: "
                                android:fontFamily="sans-serif-condensed-medium"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_tongtienthetap_thang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.000.000 vnđ"
