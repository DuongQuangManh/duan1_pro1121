<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.admin.DuyetDonHang_Fragment_Admin"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout_search_duyetdonhang"
        android:visibility="gone">
        <EditText
            android:id="@+id/edt_search_duyetdonhang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@drawable/custom_edt"
            android:paddingStart="10dp"
            android:hint="Tìm kiếm"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Spinner
            android:id="@+id/spn_trangthai_duyetdonhang"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_edt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_duyetdonhang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>