<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khách hàng"
            android:background="@drawable/custom_header_dialog"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="normal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avt_dialogkhachhang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_account"
                android:layout_gravity="center_horizontal"/>
            <EditText
                android:id="@+id/edt_tk_dialogkhachhang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edt"
                android:hint="Email hoặc số điệnt thoại"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/edt_name_dialogkhachhang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edt"
                android:hint="Họ tên"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_lich"
                app:endIconMode="custom"
                app:hintEnabled="false"
                android:layout_marginTop="10dp"
                android:id="@+id/txtinput_ngay_dialogkhachhang"
                >

                <EditText
                    android:id="@+id/edt_ngaysinh_dialogkhachhang"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Ngày sinh"
                    android:background="@drawable/custom_edt"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spn_gioitinh_dialogkhachhang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_edt"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconDrawable="@drawable/ic_eye_off"
                app:endIconMode="custom"
                app:hintEnabled="false"
                android:layout_marginTop="10dp"
                android:id="@+id/textinput1_dialogkhachhang"
                >

                <EditText
                    android:id="@+id/edt_mk1_dialogkhachhang"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="8 kí tự"
                    android:inputType="textPassword"
                    android:background="@drawable/custom_edt"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E24AA"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_luu_dialogkhachhang"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@+id/btn_huy_dialogkhachhang"
                android:background="@drawable/bg_green"
                android:paddingStart="2dp"
                android:text="Lưu"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_huy_dialogkhachhang"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_green"
                android:text="Huỷ"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>