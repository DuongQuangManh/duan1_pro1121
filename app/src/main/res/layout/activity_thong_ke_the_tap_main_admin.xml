<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.admin.ThongKeCuaHang_MainActivity_Admin"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_tophocvien"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_back_thongkethetap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Thống kê thẻ tập"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/img_back_thongkethetap"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_giam_thongkethetap"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_back"/>
        <EditText
            android:id="@+id/edt_year_thongkethetap"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:background="@drawable/bg_stroke"
            android:text="2022"
            android:gravity="center" />
        <ImageView
            android:id="@+id/img_tang_thongkethetap"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_next1" />
    </LinearLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchar_thongkethetap"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
</LinearLayout>