<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.hocvien.DatLichTap_MainActivity_HocVien"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_tophocvien"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_back_datlichtap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Đặt lịch tập"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/img_back_datlichtap"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/edt_name_datlichtap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Họ tên"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"
            android:enabled="false"/>
        <EditText
            android:id="@+id/edt_ngaydat_datlichtap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edt"
            android:hint="Ngày đặt"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:enabled="false"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_lich"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="10dp"
            android:id="@+id/txti_chonngaytap_datlichtap"
            >
            <EditText
                android:id="@+id/edt_chonngaytap_datlichtap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Chọn ngày tập"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_dongho"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="10dp"
            android:id="@+id/txti_chongiotap_datlichtap"
            >
            <EditText
                android:id="@+id/edt_chongiotap_datlichtap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Chọn giờ tập"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_dongho"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="10dp"
            android:id="@+id/txti_chongionghi_datlichtap"
            >
            <EditText
                android:id="@+id/edt_chongionghi_datlichtap"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Chọn giờ nghỉ"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/cbo_pt_datlichtap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Trainer ?"
                android:enabled="false"/>
            <Spinner
                android:id="@+id/spn_pt_datlichtap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/custom_edt"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_huy_datlichtap"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_green"
            android:text="Huỷ"
            android:textColor="@color/white"
            android:layout_toStartOf="@+id/btn_dangki_datlichtap"
            android:layout_marginEnd="20dp"/>
        <Button
            android:id="@+id/btn_dangki_datlichtap"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_gray"
            android:text="Đăng kí"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:enabled="false"/>
    </RelativeLayout>
</LinearLayout>