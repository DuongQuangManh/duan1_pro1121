<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Chức vụ"
            android:background="@drawable/custom_header_dialog"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:gravity="center"
            android:textStyle="normal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            >
            <EditText
                android:id="@+id/edt_machucvu_dialogchucvu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Mã chức vụ"
                android:paddingStart="10dp"
                android:enabled="false"/>
            <EditText
                android:id="@+id/edt_tenchucvu_dialogchucvu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edt"
                android:hint="Tên chức vụ"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#868487"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/btn_luu_dialogchucvu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@+id/btn_huy_dialogchucvu"
                android:background="@drawable/custom_btn"
                android:paddingStart="2dp"
                android:text="Lưu"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_huy_dialogchucvu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_btn"
                android:text="Huỷ"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>