<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HocVien_MainActivity">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_hocvien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botton_nav_hocvien"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botton_nav_hocvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottonnav"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/custom_color_botton_nav"
        app:itemTextColor="@color/custom_color_botton_nav"
        />
</RelativeLayout>