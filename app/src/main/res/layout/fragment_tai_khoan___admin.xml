<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.admin.ChucVu_Fragment_Admin"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_thongtin"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@color/green"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_taikhoan_thongtin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt"
        android:layout_marginTop="40dp"
        android:hint="Tài khoản"
        android:paddingStart="10dp"
        android:enabled="false"/>
    <EditText
        android:id="@+id/edt_hoten_thongtin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt"
        android:layout_marginTop="10dp"
        android:hint="Họ tên"
        android:paddingStart="10dp"
        android:enabled="false"/>
    <EditText
        android:id="@+id/edt_tennganhang_thongtin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt"
        android:layout_marginTop="10dp"
        android:hint="Tên ngân hàng"
        android:paddingStart="10dp"
        android:enabled="false"/>

    <EditText
        android:id="@+id/edt_sotaikhoan_thongtin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt"
        android:layout_marginTop="10dp"
        android:hint="Số tài khoản"
        android:paddingStart="10dp"
        android:enabled="false"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_thaydoithongtin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">
            <Button
                android:id="@+id/btn_thaydoithongtin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_green"
                android:text="Thay đổi thông tin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:enabled="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_thaydoi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible">
            <Button
                android:id="@+id/btn_thaydoi_thongtin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_green"
                android:text="Thay đổi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:enabled="false" />
            <Button
                android:id="@+id/btn_huy_thongtin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_green"
                android:text="Huỷ"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:enabled="false"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>