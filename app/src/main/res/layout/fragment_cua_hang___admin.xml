<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout_search_cuahang"
        android:visibility="gone">
        <EditText
            android:id="@+id/edt_search_cuahang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@drawable/custom_edt"
            android:paddingStart="10dp"
            android:hint="@string/search" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_cuahang"
        android:layout_below="@+id/layout_search_cuahang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:src="@drawable/ic_menu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/FAB1" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8E24AA"
        android:src="@drawable/ic_search"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:visibility="invisible"
        android:contentDescription="@string/FAB1" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E88E5"
        android:src="@drawable/ic_plus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        android:contentDescription="@string/FAB1" />

</RelativeLayout>