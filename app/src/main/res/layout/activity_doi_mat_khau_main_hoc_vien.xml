<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_tophocvien"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_back_doimatkhauhocvien"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/doimatkhau"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/img_back_doimatkhauhocvien"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="35sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu hiện tại: "
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_eye_off"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            android:id="@+id/txti_doimatkhauhocvien"
            >

            <EditText
                android:id="@+id/edt_mk_doimatkhauhocvien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mật khẩu hiện tại"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_eye_off"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            android:id="@+id/txti1_doimatkhauhocvien"
            >

            <EditText
                android:id="@+id/edt_mk1_doimatkhauhocvien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="8 kí tự"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu mới: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_eye_off"
            app:endIconMode="custom"
            app:hintEnabled="false"
            android:layout_marginTop="5dp"
            android:id="@+id/txti2_doimatkhauhocvien"
            >

            <EditText
                android:id="@+id/edt_mk2_doimatkhauhocvien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="8 kí tự"
                android:background="@drawable/custom_edt"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_huy_doimatkhauhocvien"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_green"
                android:text="Huỷ"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_toStartOf="@+id/btn_doimatkhauhocvien"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/btn_doimatkhauhocvien"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_gray"
                android:text="Đổi mật khẩu"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:enabled="false"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>